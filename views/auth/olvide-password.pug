extends ../layout/index

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md.rounded-md
            div.bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/olvide-password" noValidate).space-y-5
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email"
                        type="email" name="email")

                    div.flex.items-center.justify-between 
                        a(class="text-gray-500 text-xs hover:text-blue-700" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
                        a(class="text-gray-500 text-xs hover:text-blue-700" href="/auth/registro") ¿No tienes cuenta? Crea una
                        
                    input(class="w-full bg-indigo-600 text-white font-bold py-3 cursor-pointer hover:bg-indigo-700" type="submit" value="Enviar Instrucciones")